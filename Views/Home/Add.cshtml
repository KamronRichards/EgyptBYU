@model EgyptBYU.Models.MummyEntity

@*To add a record*@

<h2>Enter a new burial record</h2>

<form method="post">
    <input type="hidden" asp-for="id" value="@DateTime.UtcNow.Ticks" />

    <label asp-for="burialnumber"></label>
    <input asp-for="burialnumber" class="form-control" />

    <label asp-for="squarenorthsouth"></label>
    <input asp-for="squarenorthsouth" class="form-control" />


    <label asp-for="northsouth"></label>
    <input asp-for="northsouth" class="form-control" />


    <label asp-for="squareeastwest"></label>
    <input asp-for="squareeastwest" class="form-control" />

    <label asp-for="eastwest"></label>
    <input asp-for="eastwest" class="form-control" />

    <label asp-for="area"></label>
    <input asp-for="area" class="form-control" />

    <label asp-for="sex"></label>
    <input asp-for="sex" class="form-control" />

    <label asp-for="depth"></label>
    <input asp-for="depth" class="form-control" />

    <label asp-for="length"></label>
    <input asp-for="length" class="form-control" />

    <label asp-for="ageatdeath"></label>
    <input asp-for="ageatdeath" class="form-control" />

    <label asp-for="headdirection"></label>
    <input asp-for="headdirection" class="form-control" />

    <label asp-for="haircolor"></label>
    <input asp-for="haircolor" class="form-control" />

    <label asp-for="facebundles"></label>
    <input asp-for="facebundles" class="form-control" />

    <button type="submit" class="btn btn-primary">Save</button>
    <div asp-validation-summary="All"></div>
</form>
