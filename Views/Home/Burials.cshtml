@{
    ViewData["Title"] = "Burial Main";
}
@model IEnumerable<MummyEntity>

<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<body>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Database</h1>

                <div class="card mb-4">

                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        DataTable Example
                    </div>
                    <div class="card-body">
                        <div>
                            <table class="table table-striped table-bordered table-hover table-sm">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Burial Id</th>
                                        <th>Burial Number</th>
                                        <th>Square North South</th>
                                        <th>North South</th>
                                        <th>SquareEastWest</th>
                                        <th>East West</th>
                                        <th>Area</th>
                                        <th>Sex</th>
                                        <th>Depth</th>
                                        <th>Length</th>
                                        <th>Age at Death </th>
                                        <th>Head Direction</th>
                                        <th>Hair Color</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var m in Model) {
                                    <tr>
                                        <td>@m.id</td>
                                        <td>@m.burialnumber</td>
                                        <td>@m.squarenorthsouth</td>
                                        <td>@m.northsouth</td>
                                        <td>@m.squareeastwest</td>
                                        <td>@m.eastwest</td>
                                        <td>@m.area</td>
                                        @*<td>@m.textile_color_value</td>
                                        <td>@m.textile_structure_value</td>
                                        <td>@m.textilefunction_value</td>*@
                                        <td>@m.sex</td>
                                        <td>@m.depth</td>
                                        <td>@m.length</td>
                                        <td>@m.ageatdeath</td>
                                        <td>@m.headdirection</td>
                                        <td>@m.haircolor</td>

                                        <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@m.id">Edit</a></td>
                                        <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@m.id">Delete</a></td>
                                    </tr>
                                        }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
</body>
</html>

